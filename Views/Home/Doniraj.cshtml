<script src="https://www.paypal.com/sdk/js?client-id=AXHHFoI0BnkiVgOC8L7S4jgWQunL7l84hxye7f8x1_RygeOR9w7yuuIQJ7k5T0nzYhDyzsL4oQWAq-21&currency=USD" data-sdk-integration-source="button-factory"></script>
<script>
    function initPayPalButton() {
      paypal.Buttons({
        style: {
          shape: 'rect',
          color: 'gold',
          layout: 'vertical',
          label: 'paypal',

        },

        createOrder: function(data, actions) {
          return actions.order.create({
            purchase_units: [{"description":"Donacija","amount":{"currency_code":"USD","value":10}}]
          });
        },

        onApprove: function(data, actions) {
          return actions.order.capture().then(function(details) {
            alert('Transaction completed by ' + details.payer.name.given_name + '!');
          });
        },

        onError: function(err) {
          console.log(err);
        }
      }).render('#paypal-button-container');
    }
    initPayPalButton();
</script>